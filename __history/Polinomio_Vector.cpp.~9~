	void PolinomioVector::MostrarPolinomioEnLabel(TLabel *l){
	 l->Font->Size=18;
	 l->Caption="f(x)= ";


	 int i;
	 for (i = 0; i < nt; i++) {
		l->Caption=l->Caption+FloatToStr(SimpleRoundTo(VC[i],-3))+"x^"+IntToStr(VE[i])+" ";
	   //	te->Cells[i][0]=;


	 //	tc->Cells[i][0]=IntToStr();

	 }

	}
